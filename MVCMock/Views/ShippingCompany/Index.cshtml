@model IEnumerable<MVCMock.Models.ShippingCompany>

@{
    ViewBag.Title = "Index";
}

<h2>Index of Shipping Companies</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm("Index", "ShippingCompany", FormMethod.Post, new { @class = "form-inline" }))
{
    <div class="form-group">
        <label for="SearchString">Search</label>
        @Html.TextBox("SearchString", null, new { @class = "form-control" })
    </div>
    <input type="submit" value="Search" class="btn btn-default" />
}

<p></p>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Shipping Company Name", "Index", new { sortOrder = ViewBag.NameSortParam })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
            {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
